{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "*.c",
                "-o",
                //"${fileDirname}\\${fileBasenameNoExtension}.exe"
                "${fileDirname}\\main.exe"
            ],
            "options": {
                "cwd": "${fileDirname}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "Debug",
            "command": "gdb",
            "args": [
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ]
        }
    ],
    "version": "2.0.0"
}